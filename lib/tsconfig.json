{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    // "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules/**", "**/__tests__/**", "dist"]
}